<div class="container">
  <div class="ctn">
        <img class="center-block" src="http://cdn.aidamollenkamp.com/wp-content/uploads/2012/07/Aida-Mollenkamp-Mediterranean-Lamb-Burger-Recipe.jpg" alt="burger" width="350">
  </div>

 <h1 class="text-center">Eat-The-Burger!</h1>

<div class="row">
  <div class="col-lg-4">
    <ol>
      {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="btn btn-success">Devour it!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ol>
</div>

<div class="col-lg-4">
<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ol>
</div>


 <div class="text-center col-lg-4">
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <textarea class="form-control" type="text" id="bu" name="burger_name"></textarea>
        </div>
          <button type="submit" class="btn btn-primary">Submit your burger!</button>
          <p>Enter a burger you want to eat!</p>
      </form>
    </div>
    </div>
  </div>
</div>